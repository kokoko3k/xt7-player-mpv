          Fileview1.enabled = True
          thegrid.enabled = True
          'UpdateSearchResults(theplaylist, thegrid, filterstring)
        Endif
      Endif
    Endif
    Wait
  Next 'selecteditem
  UpdateSearchResults(theplaylist, thegrid, filterstring)
  global.myDebug(Timer() - t1)
End

