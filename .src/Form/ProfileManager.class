Public Sub RDelete(directory As String)
  Dim subfile As String
  For Each subfile In RDir(directory)
    Try Kill directory & "/" & subfile
    Try Rmdir directory & "/" & subfile
  Next
  For Each subfile In RDir(directory)
    Try Kill directory & "/" & subfile
    Try Rmdir directory & "/" & subfile
  Next
  Try Rmdir directory
End

